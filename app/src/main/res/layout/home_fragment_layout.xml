<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:id="@+id/home_logo_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:background="@drawable/logo"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/home_serch_linear"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_below="@id/home_logo_linear">
        
        <EditText
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:hint="통합검색"
            android:paddingLeft="5dp"
            android:textSize="20dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/home_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이런 멘토 어때요?"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/home_serch_linear"/>

    <LinearLayout
        android:id="@+id/home_morebtn_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/home_tv1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/home_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심사를 기반으로 주다가 소개하는 멘토링"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/home_tv1"/>

        <Button
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="more>"
            android:textColor="#adb5bd"
            android:textSize="10dp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/recyclerview01_linear"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@id/home_morebtn_layout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/home_morebtn2_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/recyclerview01_linear"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/home_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모든 키워드 멘토링"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/home_tv2"/>

        <Button
            android:id="@+id/btn_more02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="more>"
            android:textColor="#adb5bd"
            android:textSize="10dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@id/home_morebtn2_layout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"/>
    </LinearLayout>

</RelativeLayout>